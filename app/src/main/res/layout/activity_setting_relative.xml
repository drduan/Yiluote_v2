<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <LinearLayout
        android:id="@+id/top_title"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/guanlian_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="13dp"
                android:src="@drawable/setting_relevance_back" />

            <TextView
                android:id="@+id/settingRelativeBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginTop="12dp"
                android:text="设置"
                android:textSize="15dp"
                android:textStyle="bold|italic" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="65dp"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="账号关联"
            android:textSize="20dp"
            android:textStyle="bold|italic" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="250dp"
        android:layout_below="@+id/top_title"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/qq_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/qq_duihao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:src="@drawable/setting_relevance_choice_true" />

            <ImageView
                android:id="@+id/qq_logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/setting_relevance_qq" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/sina_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/sina_duihao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:src="@drawable/setting_relevance_choice_false" />

            <ImageView
                android:id="@+id/sina_logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/setting_relevance_microblog" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/weixin_view"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/weixin_duihao"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:src="@drawable/setting_relevance_choice_false" />

            <ImageView
                android:id="@+id/weixin_logo"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:src="@drawable/setting_relevance_wechat" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content"
        android:gravity="center"
        android:text="在一起! 在一起! 在一起! ~~~"
        android:textColor="#c8c5c4"
        android:textSize="15dp" />

</RelativeLayout>