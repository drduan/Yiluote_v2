<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <LinearLayout
        android:id="@+id/img"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/img_lizi"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:src="@drawable/ic_launcher" />

        <TextView
            android:id="@+id/text_jieshao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="帥不帥？帥不帥！！！！跪舔時刻~~！！！！昨夜熬夜到凌晨2點多才畫完啊"
            android:textColor="#000000"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/liulan"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/img"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/liulan_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:text="666"
            android:textColor="#000000"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/liulan_tou"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_head" />

        <ImageView
            android:id="@+id/liulan_toud"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_head" />

        <ImageView
            android:id="@+id/liulan_toua"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_head" />

        <ImageView
            android:id="@+id/liulan_toub"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_head" />

        <ImageView
            android:id="@+id/liulan_touc"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/user_head" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_below="@+id/liulan"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_pinglun"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/message_gray_48" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="5dp"
            android:text="66" />

        <ImageView
            android:id="@+id/img_guanzhu"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/forum_like_gray" />
    </LinearLayout>

</RelativeLayout>