<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF" >

    <LinearLayout
        android:id="@+id/top_shoucang"
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/shoucang_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/user_collection_back" />

            <TextView
                android:id="@+id/userCollectionBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:text="个人中心"
                android:textColor="#e51a21"
                android:textSize="14dp" />
        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:src="@drawable/user_collection_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="23dp"
            android:text="我的收藏"
            android:textColor="#000000"
            android:textSize="16dp" />
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/user_shoucang"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/top_shoucang"
        android:cacheColorHint="#c8c5c4" >
    </ExpandableListView>

    <ImageView
        android:id="@+id/user_shoucan"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@+id/user_shoucang"
        android:src="@drawable/user_collection_more" />

</RelativeLayout>