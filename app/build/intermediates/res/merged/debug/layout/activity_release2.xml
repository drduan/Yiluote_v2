<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff" >

    <LinearLayout
        android:id="@+id/topRelease2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/release_logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingBottom="20dp"
            android:paddingLeft="5dp"
            android:paddingTop="20dp"
            android:text="发布"
            android:textColor="#2e9980"
            android:textSize="25sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/releaseBack2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="25dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/release_back" />

    <TextView
        android:id="@+id/releaseBack2Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@+id/releaseBack2"
        android:text="拍摄"
        android:textColor="#2e9980"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/releaseNext2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/release2ShowAll"
        android:layout_alignParentRight="true"
        android:padding="5dp"
        android:text="下一步"
        android:textColor="#2e9980"
        android:textSize="18sp" />

    <HorizontalScrollView
        android:id="@+id/release2ShowAll"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_below="@+id/topRelease2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_demo_1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_demo_1" />

            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_demo_1" />
            
            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_demo_1" />
            
            <ImageView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/edit_demo_1" />
        </LinearLayout>
    </HorizontalScrollView>

    <ImageView
        android:id="@+id/release2ShowOne"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/releaseEditLogo"
        android:layout_below="@+id/release2ShowAll"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/edit_demo_1" />

    <LinearLayout
        android:id="@+id/releaseEditLogo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_above="@+id/releaseEditName"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/release_edit_crop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/release_edit_filter" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/release_edit_lable" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/releaseEditName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="裁剪"
            android:textColor="#2e9980" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="滤镜"
            android:textColor="#2e9980" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="标签"
            android:textColor="#2e9980" />
    </LinearLayout>

</RelativeLayout>